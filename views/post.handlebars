<div class="text-center">
  <h2>{{name}}</h2>
  
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  
  <form id="comment-form" data-id="{{id}}">
    <textarea id="comment-text">

    </textarea>
    <button>
      Submit
    </button>
  </form>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{comment.id}}">{{comment.comment}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

</div>
 
 <script src="/js/comment.js"></script>